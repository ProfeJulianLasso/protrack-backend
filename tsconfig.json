{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@backend/services": ["./apps/backend/src/services"],
      "@backend/controllers": ["./apps/backend/src/controllers"],
      "@security/domain": ["./apps/security/src/domain/index.ts"],
      "@security/application": ["./apps/security/src/application/index.ts"],
      "@security/infrastructure": [
        "./apps/security/src/infrastructure/index.ts"
      ]
    }
  }
}
